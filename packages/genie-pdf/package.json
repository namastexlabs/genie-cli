{
  "name": "genie-pdf",
  "version": "0.1.0",
  "description": "CLI tool for agents to generate beautiful PDFs programmatically",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "genie-pdf": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@react-pdf/renderer": "^4.1.5",
    "commander": "^13.1.0",
    "gray-matter": "^4.0.3",
    "marked": "^15.0.6",
    "react": "^18.3.1",
    "react-pdf-tailwind": "^2.3.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "@types/react": "^18.3.18",
    "typescript": "^5.7.3"
  }
}
